<?xml version="1.0" encoding="utf-8"?>
<!--
============================================================
item_history_entry.xml – Single row in the History list
============================================================
Shows: day number (large italic serif) + day label,
time/type meta, 2-line preview with fade-out mask, chevron.
============================================================
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@android:color/transparent">

    <!-- Day column: number + label -->
    <LinearLayout
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="2dp">

        <!-- Day number (e.g. "14") – large italic serif -->
        <TextView
            android:id="@+id/tv_day_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_muted"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:fontFamily="serif"
            android:lineSpacingMultiplier="1.0" />

        <!-- Day label (e.g. "THU") -->
        <TextView
            android:id="@+id/tv_day_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_muted"
            android:textSize="9sp"
            android:textStyle="bold"
            android:letterSpacing="0.18"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Content column: time/type + preview -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <!-- Time + Type meta (e.g. "7:30 AM • Reflection") -->
        <TextView
            android:id="@+id/tv_time_meta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_muted"
            android:textSize="12sp"
            android:fontFamily="sans-serif" />

        <!-- Preview text – 2 lines, fades out -->
        <TextView
            android:id="@+id/tv_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="2"
            android:ellipsizeMode="end"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Chevron arrow -->
    <TextView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="›"
        android:textColor="@color/text_muted"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginStart="8dp" />

</LinearLayout>
