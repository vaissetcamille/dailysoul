<?xml version="1.0" encoding="utf-8"?>
<!--
============================================================
activity_settings.xml â€“ App Settings Screen
============================================================
Back arrow header, three sections (Appearance, Notifications,
Data & Privacy), version footer. Matches mockup exactly.
============================================================
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_warm">

    <!-- â”€â”€ Header: Back + Title â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="48dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back arrow -->
        <TextView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â€¹"
            android:textColor="@color/text_warm"
            android:textSize="28sp"
            android:gravity="center"
            android:contentDescription="@string/cd_back" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings_title"
            android:textColor="@color/text_warm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:gravity="center" />

        <!-- Spacer (mirror back arrow width) -->
        <View android:layout_width="40dp" android:layout_height="40dp" />
    </LinearLayout>

    <!-- â”€â”€ Scrollable Settings Body â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- â”€â”€ Section: APPEARANCE â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="8dp"
                android:text="@string/settings_appearance"
                android:textColor="@color/text_muted"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.15"
                android:fontFamily="sans-serif" />

            <!-- Dark Mode row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/bg_card"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layoutParams="match_parent"
                android:backgroundTint="@color/bg_card">

                <!-- Icon + Label -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â—‘"
                        android:textColor="@color/text_muted"
                        android:textSize="18sp"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/settings_dark_mode"
                        android:textColor="@color/text_dark"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Toggle Switch -->
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_dark_mode"
                    android:layout_width="51dp"
                    android:layout_height="31dp"
                    android:checked="false"
                    app:colorFilter="@color/terracotta" />
            </LinearLayout>

            <!-- â”€â”€ Section: NOTIFICATIONS â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="8dp"
                android:text="@string/settings_notifications"
                android:textColor="@color/text_muted"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.15"
                android:fontFamily="sans-serif" />

            <!-- Daily Reminder row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/bg_card"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <!-- Icon + Label + Desc -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸ””"
                            android:textSize="16sp"
                            android:gravity="center" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/settings_daily_reminder"
                            android:textColor="@color/text_dark"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/settings_reminder_desc"
                        android:textColor="@color/text_muted"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Toggle Switch -->
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_notifications"
                    android:layout_width="51dp"
                    android:layout_height="31dp"
                    android:checked="true"
                    app:colorFilter="@color/terracotta" />
            </LinearLayout>

            <!-- â”€â”€ Section: DATA & PRIVACY â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="8dp"
                android:text="@string/settings_data_privacy"
                android:textColor="@color/text_muted"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.15"
                android:fontFamily="sans-serif" />

            <!-- Export Journal row -->
            <LinearLayout
                android:id="@+id/btn_export"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/bg_card"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="8dp">

                <!-- Icon + Label + Desc -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸ“¤"
                            android:textSize="16sp"
                            android:gravity="center" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/settings_export"
                            android:textColor="@color/text_dark"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/settings_export_desc"
                        android:textColor="@color/text_muted"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Chevron -->
                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="â€º"
                    android:textColor="@color/text_muted"
                    android:textSize="22sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Privacy Policy row -->
            <LinearLayout
                android:id="@+id/btn_privacy"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/bg_card"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- Icon + Label -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ðŸ›¡"
                        android:textSize="16sp"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/settings_privacy_policy"
                        android:textColor="@color/text_dark"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Open-in-new icon -->
                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="â†—"
                    android:textColor="@color/text_muted"
                    android:textSize="18sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- â”€â”€ Footer: Made with Soul / Version â”€â”€â”€â”€â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:alpha="0.5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_made_with"
                    android:textColor="@color/text_warm"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:fontFamily="serif" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_version"
                    android:textColor="@color/text_muted"
                    android:textSize="10sp"
                    android:letterSpacing="0.2"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
